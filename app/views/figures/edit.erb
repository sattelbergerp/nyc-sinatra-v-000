<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>"><br>
  Titles:
  <% Title.all.each do |title| %>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%>
  <% end %><br>
  <input type="text" id="new_title" name="title[name]"><br>
  Landmarks:
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%>
  <% end %><br>
  <input type="text" id="new_landmark" name="landmark[name]"><br>
  <input type="submit" id="Edit Figure" value="Update Figure">
</form>
